# 데이터베이스 설정
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_NAME=threedpc_db
DATABASE_USER=threedpc_user
DATABASE_PASSWORD=threedpc_password
DB_ROOT_PASSWORD=rootpassword

# 애플리케이션 포트 설정
APP_PORT=8080
PORT=8080
NODE_ENV=development

# JWT 토큰 시크릿 키
# 프로덕션 환경에서는 반드시 강력한 랜덤 문자열로 변경하세요
JWT_ACCESS_SECRET=your_jwt_access_secret_key_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here

# 카카오 OAuth 설정
# 카카오 개발자 콘솔(https://developers.kakao.com)에서 발급받은 키를 입력하세요
KAKAO_CLIENT_ID=your_kakao_client_id
KAKAO_CLIENT_SECRET=your_kakao_client_secret
KAKAO_CALLBACK_URL=http://localhost:3000/auth/kakao/callback

# Firebase 서비스 계정 설정
# Firebase 콘솔에서 다운로드한 서비스 계정 JSON 파일의 전체 내용을 문자열로 입력하세요
# 예: FIREBASE_SERVICE_ACCOUNT='{"type":"service_account","project_id":"..."}'
FIREBASE_SERVICE_ACCOUNT=
